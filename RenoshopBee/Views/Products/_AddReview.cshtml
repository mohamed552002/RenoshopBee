@using Microsoft.AspNetCore.Identity;
@using RenoshopBee.Models;
@model RenoshopBee.ViewModels.ProductDetailsVM
@inject UserManager<ApplicationUser> UserManager
<form method="post">
    <div class="addNewRev">
        <div class="header">
            <h5 class="mb-4">Add a review</h5>
        </div>
        <div class="review-form row container">
            <div class="ratingAndTextarea d-flex align-items-center px-0 my-4 flex-column flex-md-row">
                <p class="m-md-0 pe-md-5">Your review</p>
                <p class="m-md-0">Your Rating:</p>
                <div class="rating-choose d-flex ms-5 gap-4">
                    <div class="rating-selection d-flex">
                        <div class="rating">
                            <span class="star" data-star="1">&#9733;</span>
                            <span class="star" data-star="2">&#9733;</span>
                            <span class="star" data-star="3">&#9733;</span>
                            <span class="star" data-star="4">&#9733;</span>
                            <span class="star" data-star="5">&#9733;</span>
                        </div>
                    </div>
                </div>
            </div>
            <textarea class="reviewTA col-12 p-2 border rounded me-lg-5"></textarea>
            <input class="productId" hidden value="@Model.product.ID" />
            <input onclick="AddReview()" type="button" id="newComment" class="btn btn-primary text-white text-uppercase rounded-0 me-5 py-2 col-6 col-lg-3 mt-3"
                   value="submit" />
        </div>

    </div>
</form>